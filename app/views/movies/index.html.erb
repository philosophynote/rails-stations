<h1>映画一覧</h1>
<div class="container">
  <div class="row justify-content-center">
    <% @movie.each do |movie| %>    
      <div class="col-md-3">
        <div class="card">
          <%=movie_thumbnail(movie)%>
          <div class="card-body">
            <h4 class="card-title fw-bold"><%=movie.name%></h4>
            <p class="card-text"><%=movie.description%></p>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>

