<h1>映画一覧</h1>
<div class="container">
  <%= form_with scope: :search, url: movies_path, method: :get, local: true do |form| %>
    <div><%= form.search_field :keyword %></div>
    <%
=begin%>
 <div> 
<%
=end%>
      <%= form.radio_button :is_showing, '' %>
      <%= form.label :is_showing, '全て', {value: '', style: 'display: inline-block;'} %>
      <%= form.radio_button :is_showing, 1 %>
      <%= form.label :is_showing, '公開中', {value: 1, style: 'display: inline-block;'} %>
      <%= form.radio_button :is_showing, 0 %>
      <%= form.label :is_showing, '公開予定', {value: 0, style: 'display: inline-block;'} %>
    </div>
    <div>
      <%= form.submit '検索する', class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <% @movie.each do |movie| %>    
      <div class="col-md-3">
        <div class="card">
          <%=movie_thumbnail(movie)%>
          <div class="card-body">
            <h4 class="card-title fw-bold"><%=movie.name%></h4>
            <p class="card-text"><%=movie.description%></p>
          </div>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>

