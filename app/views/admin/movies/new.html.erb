<!-- Navbar -->
<nav class="navbar navbar-light" style="background-color: #e3f2fd; height: 5rem;">
  <p class="fs-1 text-start">管理画面</p>
</nav>
<div class="row justify-content-start">
  <div class="col-2" style="background-color: #e9ecef; height: 95rem;">
    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">

    </div>
  </div>
  <div class="col-10">
    <h2>映画一覧</h2>
    <%= form_with(url: admin_movies_path, model: @movie, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      <table>
          <tr class="table-primary">
            <th><%= f.label :name %></th>
            <th><%= f.text_field :name, class: 'form-control' %></th>
          </tr>
          <tr>
            <th><%= f.label :year %></th>
            <th><%= f.text_field :year, class: 'form-control' %></th>
          </tr>
          <tr>
            <th><%= f.label :is_showing %></th>
            <th><%= f.check_box :is_showing %></th>
          </tr>
          <tr>
            <th><%= f.label :description %></th>
            <th><%= f.text_area :description, class: 'form-control' %></th>
          </tr>
          <tr>
            <th><%= f.label :image_url %></th>
            <th><%= f.text_field :image_url, class: 'form-control' %></th>
          </tr>
      </table>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  