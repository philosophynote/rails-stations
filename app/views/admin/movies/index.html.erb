<!-- Navbar -->
<nav class="navbar navbar-light" style="background-color: #e3f2fd; height: 5rem;">
  <p class="fs-1 text-start">管理画面</p>
</nav>
<div class="row justify-content-start">
  <div class="col-2" style="background-color: #e9ecef; height: 95rem;">
    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">

    </div>
  </div>
  <div class="col-10">
    <h2>映画一覧</h2>
    <table>
      <thead>
        <tr class="table-primary">
          <th scope="col">ID</th>
          <th scope="col">映画タイトル</th>
          <th scope="col">公開年</th>
          <th scope="col">上映中か</th>
          <th scope="col">概要</th>
          <th scope="col">画像URL</th>
          <th scope="col">作成日時</th>
          <th scope="col">更新日時</th>
        </tr>
      </thead>
      <% @movie.each do |movie| %>
        <tbody>
          <tr>
            <td><%= movie.id %></td>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <td><%= movie_showing(movie) %></td>
            <td><%= movie.description %></td>
            <td><%= link_to movie.image_url %></td>
            <td><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>